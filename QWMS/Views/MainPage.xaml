<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QWMS.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:QWMS.Models"
    xmlns:viewModel="clr-namespace:QWMS.ViewModels"
    Title="Zamówienia"
    x:DataType="viewModel:OrderListViewModel">
    <Grid
        ColumnDefinitions="*,*"
        ColumnSpacing="5"
        RowDefinitions="*,Auto"
        RowSpacing="0">
        <CollectionView
            Grid.ColumnSpan="2"
            ItemsSource="{Binding Orders}"
            SelectionMode="Single">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:OrderModel">
                    <Grid Padding="10,5,0,5" ColumnDefinitions="*,*">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </Grid.GestureRecognizers>
                        <Label
                            Grid.Column="0"
                            Text="{Binding Name}"
                            VerticalOptions="Center" />
                        <Label
                            Grid.Column="1"
                            Padding="10,0,0,0"
                            Text="{Binding Contractor}"
                            VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="8"
            Command="{Binding GetOrdersCommand}"
            IsEnabled="{Binding IsNotBusy}"
            Text="Get Orders" />
        <!--  Style="{StaticResource ButtonOutline}"  -->
        <ActivityIndicator
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            HorizontalOptions="FillAndExpand"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="CenterAndExpand" />
    </Grid>
</ContentPage>


