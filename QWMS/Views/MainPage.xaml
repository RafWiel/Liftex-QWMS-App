<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:QWMS.Models"
             x:Class="QWMS.Views.MainPage">
    <CollectionView>
        <CollectionView.ItemsSource>
            <x:Array Type="{x:Type model:OrderListModel}">
                <model:OrderListModel
                    Order="O1"
                    Contractor="K1" />
                <model:OrderListModel
                    Order="O1"
                    Contractor="K1" />
                <model:OrderListModel
                    Order="O1"
                    Contractor="K1" />
                <model:OrderListModel
                    Order="O1"
                    Contractor="K1" />
            </x:Array>
        </CollectionView.ItemsSource>
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="model:OrderListModel">
                <HorizontalStackLayout Padding="0">
                    <Label VerticalOptions="Center" >
                        <Label.Text>
                            <Binding Path="Order" />
                        </Label.Text>
                    </Label>
                    <Label VerticalOptions="Center">
                        <Label.Text>
                            <Binding Path="Contractor" />
                        </Label.Text>
                    </Label>
                </HorizontalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
